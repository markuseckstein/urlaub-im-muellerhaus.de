---
import BaseLayout from "../layouts/BaseLayout.astro"
import HeaderImage from "../components/HeaderImage.astro"
import { getEntry, render } from "astro:content"

const page = await getEntry("pages", "index")
const { Content } = await render(page)

const aside = await getEntry("sections", "index-aside")
const { Content: AsideContent } = await render(aside)

const dtvSection = await getEntry("sections", "index-dtv")
const { Content: DtvContent } = await render(dtvSection)

const kunstOffen = await getEntry("sections", "index-kunst-offen")
const { Content: KunstOffenContent } = await render(kunstOffen)

import sterneSiegel from "../img/dtv_4sterne_siegel.png"
import kunstscheune from "../img/kunst_offen.jpg"
import dtvLogo from "../img/dtv_4sterne.jpg"
---

<BaseLayout title={page.data.seoTitle}>
  <div>
    <HeaderImage page="index" />
    <div class="main-container">
      <div class="main wrapper clearfix">
        <article>
          <header>
            <h1 class="heading">{page.data.title}</h1>
            <Content />
          </header>
        </article>
        <aside class="index-aside">
          <h3>{aside.data.title}</h3>
          <AsideContent />
        </aside>
        <article class="event-teaser">
          <p>
            <img
              src={sterneSiegel.src}
              width="100%"
              alt="DTV-4-Sterne-Siegel Wohnung Altwarp"
            />
          </p>
          <h3>{dtvSection.data.title}</h3>
          <DtvContent />
        </article>
        <article class="event-teaser">
          <h3>{kunstOffen.data.title}</h3>
          <KunstOffenContent />
          <p>
            <img
              src={kunstscheune.src}
              width="100%"
              alt="Kunstausstellung in der Kunstscheune"
            />
          </p>
        </article>
        <article class="dtv-logo">
          <p>
            <img src={dtvLogo.src} width="100%" alt="DTV-4-Sterne-Logo" />
          </p>
        </article>
      </div>
    </div>
  </div>
</BaseLayout>
