---
import type { ImageMetadata } from "astro"
import { getImage } from "astro:assets"

interface Props {
  src: ImageMetadata
  position?: string
  height?: string
}

const { src, position = "50% 50%", height = "50vmin" } = Astro.props
const optimized = await getImage({ src, width: 1920 })
---

<div
  class="header-image"
  style={`background-image: url('${optimized.src}'); background-position: ${position}; height: ${height};`}
>
</div>

<style>
  .header-image {
    background-size: cover;
  }
</style>
